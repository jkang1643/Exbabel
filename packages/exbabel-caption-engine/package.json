{
    "name": "@exbabel/caption-engine",
    "version": "0.1.0",
    "description": "Framework-agnostic caption client engine for real-time translation apps",
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "tsc",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:golden": "vitest run --testNamePattern=golden",
        "lint": "eslint src --ext .ts",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "caption",
        "translation",
        "real-time",
        "electron",
        "websocket"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/your-org/exbabel-caption-engine.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.10.0",
        "typescript": "^5.3.0",
        "vitest": "^1.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}