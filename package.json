{
  "name": "exbabel",
  "version": "1.0.0",
  "description": "Exbabel - Real-time speech translation powered by Gemini AI",
  "type": "module",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm run dev",
    "frontend:dev": "node scripts/waitForBackend.js && cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "lint": "eslint .",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "tts:snapshot": "node scripts/fetchGoogleTtsVoicesSnapshot.js",
    "tts:diff": "node scripts/diffTtsLanguages.js",
    "tts:update": "npm run tts:snapshot && npm run tts:diff"
  },
  "devDependencies": {
    "@eslint/css": "^0.13.0",
    "@eslint/js": "^9.38.0",
    "@eslint/json": "^0.13.2",
    "concurrently": "^8.2.2",
    "eslint": "^9.38.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0"
  },
  "keywords": [
    "translation",
    "gemini",
    "realtime",
    "speech",
    "ai",
    "exbabel"
  ],
  "author": "Exbabel",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@google-cloud/aiplatform": "^6.1.0",
    "@google-cloud/speech": "^7.2.1",
    "@google-cloud/text-to-speech": "^6.4.0"
  }
}